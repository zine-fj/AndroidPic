/**index.wxss**/
/* 壁纸分类 */
page {
  width: 100%;
  height: 100%;
}
.pic{
  overflow: hidden;
}
movable-area {
  width: 100%;
  height: 100%;
  position: relative;
}
movable-view {
  position: fixed;
  left: 0;
  top: 0;
  width: 80rpx;
  height: 80rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  border-radius: 50%;
  background: rgba(255,255,255,.6);
  box-shadow: 0 0 20rpx #ddd;
  
}
movable-view text {
  font-size: 32rpx;
  color: #7fb80e;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}
movable-view .new-hot-act {
  color: #f00;
}
.pic-class{
  position: fixed;
  left: 0;
  top: 0;
  font-size: 32rpx;
  width: 100%;
  height: 60rpx;
  line-height: 1;
  display: flex;
  align-items: center;
  white-space: nowrap;
  padding: 10rpx;
  z-index: 2;
  overflow: hidden;
  box-shadow: 0 0 10rpx #ddd;
  background: rgba(255,255,255,.4);
  box-sizing: border-box;
}
.pic-class text{
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #444;
}
.pic-class .text-act{
  color: #f00;
}
.pic-cont{
  margin-top: 60rpx;
  height: calc(100% - 60rpx);
}
.pic-cont image{
  width: 48%;
  margin: 1%;
  min-height: 600rpx;
  display: inline-block;
  vertical-align: top;
  box-shadow:0 0 6rpx 0 #ccc;
}

.tips {
  font-size: 28rpx;
  text-align: center;
  padding: 20rpx;
  color: #ccc;
}

.tips image,
.tips text {
  vertical-align: middle;
}

.tips image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.tips text {
  padding: 20rpx 40rpx;
  color: #999;
  font-size: 38rpx;
  text-align: center;
}
.footer{
  display: flex;
  align-items: center;
  justify-content: center;
}
.footer text{
  font-size: 36rpx;
  padding: 0;
}
.footer .skip-fenge{
  margin: 0 10rpx;
}
.footer .skip{
  margin: 0 30rpx;
}