<!--index.wxml-->
<scroll-view scroll-y class='pic-list'>
  <view wx:for="{{picLass}}" 
  bindtap='clickLi'
  data-id='{{item.id}}'
  data-num='{{index}}'
  data-name='{{item.name}}'
  wx:key="{{index}}" class='pic-li' style="width:{{picW}}px;height: {{picH}}px">
    <image mode='scaleToFill' class='pic-li-img' src='{{item.cover}}'></image>
    <text class='pic-li-word'>{{item.name}}</text>
  </view>
</scroll-view>

